@{ ViewData["Title"] = "Home "; }


@model DevInterview._1.Context.ApplicantDetailsModel;

<section class="content container-fluid">
    <div class="panel panel-default" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-body">
                            <form method="post" asp-controller="Home" asp-action="InsertDetails">

                                <div class="col-md-4">

                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input class="form-control" type="text" asp-for="first_name" />
                                    </div>

                                    <div class="form-group">
                                        <label>Mid Name</label>
                                        <input class="form-control" type="text" asp-for="middle_name" />
                                    </div>

                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input class="form-control" type="text" asp-for="last_name" />
                                    </div>

                                    <div class="form-group">
                                        <label>Sex</label>
                                        <select id="sex" asp-for="sex">
                                            <option id="1">Male</option>
                                            <option id="2">Female</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        <input class="form-control" type="date" asp-for="date_of_birth" />
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Marital Status</label>
                                        <select id="maritalstatus" asp-for="marital_status">
                                            <option id="1">Married</option>
                                            <option id="2">Single</option>
                                            <option id="3">Devorced</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Pinfl Number</label>
                                        <input class="form-control" type="text" asp-for="pinfl_number" />
                                    </div>

                                    <div class="form-group">
                                        <label>County</label>
                                        <select id="ddlCounty" class="form-control countyDropdown"  asp-for="county" asp-items="Model.List_Counties">
                                            <option value="0"> --- select county ---</option>                                          
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Sub County</label>
                                        <select id="ddlSubCounty" class="form-control subcountyDropdown"  asp-for="sub_county">
                                            <option value="0">-Sub Counties-</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Ward</label>
                                        <select id="ddlWard" class="form-control wardsDropdown" asp-for="ward">
                                            <option value="0">-wards-</option>
                                        </select>
                                    </div>

                                </div>
                                <div class="col-md-4">

                                    <div class="form-group">
                                        <label>Postal Address</label>
                                        <input class="form-control"  type="text" asp-for="postal_address" />
                                    </div>

                                    <div class="form-group">
                                        <label>Physical Address</label>
                                        <input class="form-control" type="text" asp-for="physical_address" />
                                    </div>


                                    <div class="form-group">
                                        <label>Email Address</label>
                                        <input class="form-control" type="email" asp-for="email" />
                                    </div>

                                    <div class="form-group">
                                        <label>Telephone</label>
                                        <input class="form-control" type="text" asp-for="telephone_number" />
                                    </div>

                                    <div class="form-group">                                      
                                        <button class="form-control btn btn-primary" type="submit">Submit Details</button>
                                    </div>


                                </div>



                                @*<div class="form-group">
                                        <label>County iD: </label><input  class="form-control" asp-for="county_id" />
                                    </div>

                                    <br />
                                    <div class="form-group">
                                        <label>County Name: </label><input  class="form-control" asp-for="county_name" />
                                    </div>

                                    <br />
                                    <button class="form-control" type="submit">Add County</button> *@
                            </form>

                            <div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
